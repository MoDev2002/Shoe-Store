<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="edit_text">
        <item name="android:paddingStart">@dimen/text_edit_padding</item>
        <item name="android:paddingEnd">@dimen/text_edit_padding</item>
        <item name="android:paddingTop">@dimen/text_edit_padding</item>
        <item name="android:paddingBottom">@dimen/text_edit_padding</item>
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">@dimen/text_edit_padding</item>
        <item name="android:background">@drawable/edit_text_theme</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="primary_button">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="secondary_button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>
</resources>
